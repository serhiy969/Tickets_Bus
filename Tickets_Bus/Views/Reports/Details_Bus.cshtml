@model Tickets_Bus.Models.BUS

@{
    ViewBag.Title = "Home Page";
}


<h2>Звіт про автобуси та кількість у них місць</h2>


@using (Html.BeginForm("Show_Bus", "Reports", FormMethod.Get))
{

    <h3>Для перегляду місць введіть наступні дані: </h3>
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Num_Seats, "Кількість місць", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Num_Seats", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Num_Seats, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Перегляд автобусів" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}





