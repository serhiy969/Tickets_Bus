@model Tickets_Bus.Models.Driver
@{
    ViewBag.Title = "Звіт ";
}


<h2>Звіт про кількість рейсів, які здійснили водії та кількість перевезених пасажирів</h2>


@using (Html.BeginForm("Show_Drivers", "Reports", FormMethod.Get))
{

    <h3>Виберіть дані: </h3>
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.FirstLastName, "Водій:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Driver_Info", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ID_Driver, "", new { @class = "text-danger" })
            </div>
        </div>
        @*@Html.ActionLink("Переглянути", "Show_Drivers", "Reports", new { Driver_Info = Model.ID_Driver }, null)*@
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Перегляд" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}





