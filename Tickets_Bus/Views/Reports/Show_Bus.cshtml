
@using Tickets_Bus.Models
@model List<DriverDetails>
{
    ViewBag.Title = "Index";
}

<h2>Автобуси</h2>

<table class="table">
    <tr>
        <th>
            Назва автобуса
        </th>
        <th>
            Номерний знак
        </th>
        <th>
            Кількість місць
        </th>
        <th>
            Дата останнього ТО
        </th>
        <th>
            Надійність
        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name_Bus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Number_Bus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Num_Seats)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date_LastTO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reliability)
            </td>

            @*<td>
                    @Html.ActionLink("Get Ticket", "Create", "Tickets", new { routeId = item.ID_Route, departure = item.Route.Departure, arrival=item.RouteStation.ID_Station },null)
                </td>*@
        </tr>
    }

</table>

