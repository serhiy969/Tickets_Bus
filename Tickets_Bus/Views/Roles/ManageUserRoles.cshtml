
@{
	ViewBag.Title = "ManageUserRoles";
}

<h2>Управління ролями користувача</h2>
@Html.ActionLink("Додати нову роль", "Create") | @Html.ActionLink("Додати нового користувача", "Register","Account")| @Html.ActionLink("Управління ролі користувача", "ManageUserRoles")
<hr />

<h2>Додати роль користувача</h2>

@using (Html.BeginForm("RoleAddToUser", "Roles"))
{
	@*@Html.AntiForgeryToken()*@
	@Html.ValidationSummary(true)

	<p>
		Username : @Html.TextBox("UserName")
		Role Name: @Html.DropDownList("RoleName", (IEnumerable<SelectListItem>)ViewBag.Roles, "Select ...")

	</p>

	<input type="submit" class="btn btn-default" value="Зберегти" />
}
<hr />
<h3>Отримати ролі для користувача</h3>
@using (Html.BeginForm("GetRoles", "Roles"))
{
	@*@Html.AntiForgeryToken()*@
	<p>
		Username : @Html.TextBox("UserName")
		<input type="submit" class="btn btn-default" value="Отримати ролі для цього користувача" />
	</p>
}

@if (ViewBag.RolesForThisUser != null)
{
	<div style="background-color:yellow;">
		<h3>Ролі для цього користувача </h3>
		<ol>
			@foreach (string s in ViewBag.RolesForThisUser)
			{
				<li>@s</li>
			}
		</ol>
	</div>
}

<hr />
<h3>Видалення користувача з ролі</h3>

@using (Html.BeginForm("DeleteRoleForUser", "Roles"))
{
	@*@Html.AntiForgeryToken()*@
	@Html.ValidationSummary(true)

	<p>
		Username : @Html.TextBox("UserName")
		Role Name: @Html.DropDownList("RoleName", (IEnumerable<SelectListItem>)ViewBag.Roles, "Select ...")

	</p>

	<input type="submit" class="btn btn-default" value="Видалити користувача з ролі" />
}
